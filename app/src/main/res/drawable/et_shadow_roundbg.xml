<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->

    <!-- Bottom right side 2dp Shadow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/graylight"
                android:gradientRadius="@dimen/_2sdp"
                android:startColor="@color/graylight" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="@dimen/_5sdp"
        android:left="@dimen/_3sdp"
        android:right="@dimen/_3sdp"
        android:top="@dimen/_5sdp">
        <shape android:shape="oval">
            <gradient
                android:endColor="@color/white"
                android:gradientRadius="@dimen/_1sdp"
                android:startColor="@color/white" />
            <!--<solid android:color="@color/white" />-->
            <corners android:radius="2dp" />
        </shape>
    </item>
</layer-list>